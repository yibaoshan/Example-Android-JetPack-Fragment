<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:text="From Activity Text"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />

    <TextView
            android:id="@+id/result_example1_fragment_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <EditText
            android:id="@+id/result_example1_fragment_edt_to_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/result_example1_fragment_btn_send"
            android:layout_width="match_parent"
            android:text="Send To Activity"
            android:layout_height="wrap_content" />


</LinearLayout>